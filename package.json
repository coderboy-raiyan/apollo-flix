{
  "name": "apollo-flix",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start:dev": "yarn build && concurrently \"tsc --watch\" \"nodemon ./dist/src/server.js\"",
    "start:prod": "yarn build && node dist/src/server.js",
    "lint": "eslint .",
    "lint:fix": "npx eslint src --fix",
    "prettier": "prettier --ignore-path .gitignore --write \"./src/**/*.+(js|ts|json)\"",
    "prettier:fix": "npx prettier --write src"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-status": "^1.7.4",
    "mongoose": "^8.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "eslint": "^9.3.0",
    "globals": "^15.3.0",
    "nodemon": "^3.1.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.9.0"
  }
}
